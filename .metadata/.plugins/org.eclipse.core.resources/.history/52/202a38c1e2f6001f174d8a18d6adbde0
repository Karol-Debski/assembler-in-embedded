  .syntax unified
  .cpu cortex-m4
  .fpu softvfp
  .thumb

.global  memcopy_asm

dest_addr_reg .req r0
src_addr_reg  .req r1
num_val_reg   .req r2
cnt_reg       .req r4
tmp_reg       .req r5

.text

/* assumptions from the ABI document:
r0 - dest
r1 - src
r2 - num
*/

//count leading zeros
clz:
 clz r0, r0
 bx lr

rev:

rbit:



memcopy_asm:
 push {cnt_reg, tmp_reg}
 mov cnt_reg, 0

 push {lr}
 bl loop
 pop {lr}

 pop {cnt_reg, tmp_reg}
 bx lr

loop:
 cmp cnt_reg, num_val_reg
 it eq
 bxeq lr
 ldrb tmp_reg, [src_addr_reg],  1
 strb tmp_reg, [dest_addr_reg], 1
 //cnt++
 add cnt_reg, 1
 b loop
